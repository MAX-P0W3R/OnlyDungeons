# /etc/systemd/system/dailydungeon.service
[Unit]
Description=dailydungeon
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/opt/dailydungeon
Environment="PATH=/opt/dailydungeon/venv/bin"
ExecStart=/opt/dailydungeon/venv/bin/gunicorn -w 2 -b 0.0.0.0:5000 app:app
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target